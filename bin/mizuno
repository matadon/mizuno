#!/usr/bin/env ruby

raise("Mizuno only runs on JRuby.") unless (RUBY_PLATFORM =~ /java/)

begin
  require 'rjack-logback'
  RJack::Logback.config_console( :stderr => true, :thread => true )
rescue LoadError => e
  require 'rjack-slf4j/simple'
end

require 'rack'
require 'mizuno'

server = Rack::Server.new
server.options[:server] = 'mizuno'
server.start
